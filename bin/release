#!/usr/bin/env bash

set -e

BRANCH=$(git rev-parse --abbrev-ref HEAD)
if [[ "$BRANCH" != "master" ]]; then
  echo 'You must be on the master branch to release.';
  exit 1;
fi

if [[ $# -eq 0 ]]; then
  echo "Please specify a version bump - major, minor, or patch."
  exit 1
fi

poetry run bumpversion $1 --verbose

git push

git push --tags